<form action="/transactions/<%=@transaction.id %>" method="POST">

  <label for="merchant">Merchant:</label>
  <select name="merchant_id" id="merchant">
    <% for merchant in @merchants %>
      <option value="<%= merchant.id %>">
        <%= merchant.name() %>
      </option>
    <% end %>
  </select>

  <label for="tag">Purchase Tag:</label>
  <select name="tag_id" id="tag">
    <% for tag in @tags %>
      <option value="<%= tag.id %>">
        <%= tag.type() %>
      </option>
    <% end %>
  </select>

  <label for="amount">Amount: Â£</label>
  <input type="number" min="0" step="0.01" id="amount" name="amount" value="<%= '%.2f'% @transaction.amount %>">

  <label for="time_log">Timestamp(24hr):</label>
  <input type="datetime-local" id="time_log" name="time_log" value="<%= @transaction.html_time %>">

  <input type="submit" value="Save Changes">

</form>
