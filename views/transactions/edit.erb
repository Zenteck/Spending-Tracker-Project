<form action="/transactions/<%=@transaction.id %>" method="POST">

  <label for="merchant">Merchant:</label>
  <select name="merchant_id" id="merchant">
    <% for merchant in @merchants %>
      <option value="<%= merchant.id %>">
        <%= merchant.name() %>
      </option>
    <% end %>
  </select>

  <label for="tag">Purchase Tag:</label>
  <select name="tag_id" id="tag">
    <% for tag in @tags %>
      <option value="<%= tag.id %>">
        <%= tag.type() %>
      </option>
    <% end %>
  </select>

  <label for="amount">Amount: Â£</label>
  <input type="number" min="0" id="amount" name="amount" value="<%= @transaction.amount %>">

  <label for="top">Timestamp(24hr):</label>
  <input type="datetime-local" id="top" name="top" value="<%= @transaction.time.to_s.sub(' ','T').chomp(':00 +0100').chomp(':00 +0000') %>">

  <input type="submit" value="Save Changes">

</form>
